{
    "compilerOptions": {
      "target": "es2017",                     // or "es2020" or "esnext"
      "lib": ["esnext", "dom"],               // add "dom" for browser-related types
      "module": "commonjs",                   // or "esnext" depending on your project
      "strict": true,
      "esModuleInterop": true,
      "outDir": "dist",
      "sourceMap": true,
      "moduleResolution": "node",
      "resolveJsonModule": true,
      "skipLibCheck": true                    // optional: avoids errors in node_modules
    }
  }
  